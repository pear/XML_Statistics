<!DOCTYPE package SYSTEM "http://pear.php.net/dtd/package-1.0">
<package version="1.0">
  <name>XML_Statistics</name>
  <summary>Class to obtain statistical information from an XML documents.</summary>
  <description>XML_Statistics is able to retrieve statistics about tags, attributes, entities, processing instructions and CDaata chunks in any XML document.</description>
  <maintainers>
    <maintainer>
      <user>schst</user>
      <name>Stephan Schmidt</name>
      <email>schst@php.net</email>
      <role>lead</role>
    </maintainer>
  </maintainers>
  <release>
    <version>0.1</version>
    <date>2003-09-18</date>
    <license>PHP License</license>
    <state>beta</state>
    <notes>initial release</notes>
    <deps>
      <dep type="pkg" rel="has">XML_Parser</dep>
    </deps>
    <provides type="class" name="XML_Statistics" extends="XML_Parser" />
    <provides type="function" name="XML_Statistics::analyzeFile" />
    <provides type="function" name="XML_Statistics::analyzeString" />
    <provides type="function" name="XML_Statistics::apiVersion" />
    <provides type="function" name="XML_Statistics::getTagOccurences" />
    <provides type="function" name="XML_Statistics::getAttributeOccurences" />
    <provides type="function" name="XML_Statistics::countTag" />
    <provides type="function" name="XML_Statistics::countTagsInDepth" />
    <provides type="function" name="XML_Statistics::countAttribute" />
    <provides type="function" name="XML_Statistics::countPI" />
    <provides type="function" name="XML_Statistics::countExternalEntity" />
    <provides type="function" name="XML_Statistics::countDataChunks" />
    <provides type="function" name="XML_Statistics::getCDataLength" />
    <provides type="function" name="XML_Statistics::getMaxDepth" />
